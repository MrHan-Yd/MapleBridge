        <!--根据帖子唯一标识获取帖子点赞情况-->
        <select id="getPostLikeByPostId" resultType="ESLike" >
            SELECT
                like_id,
                user_id,
                post_id,
                comment_id,
                `timestamp`
            FROM `like`
            WHERE post_id = #{postId}
            AND comment_id IS NULL
        </select>
